<core:FragmentDefinition id="_addReviewFrag_ID"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:ui="sap.ui">

    <Dialog title="{i18n>dialogWindow}" icon="sap-icon://add-product">
        <f:SimpleForm editable="true" class="editableForm sapUiTinyMargin" layout="ResponsiveLayout" title="{i18n>dialogTitle}" width="800px">
            <f:content>
                <core:Title text="{i18n>dialogSub}"></core:Title>
                <VBox>
                    <HBox>
                        <!-- Basic Info -->
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Asset">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemasset-0-key" text="Drone Quadcopter"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemasset-1-key" text="X Series Forklift"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemasset-2-key" text="Ferrari F90"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemasset-3-key" text="4G63 Engine"/>
                                </items>
                            </ComboBox>
                        </VBox>
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Reviewed By">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemrevie-0-key" text="Robert Jones"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemrevie-1-key" text="Layla Parker"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemrevie-2-key" text="Ronald McDoogle"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemrevie-3-key" text="James Smith"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemrevie-3-key" text="Sarah Rose"/>
                                </items>
                            </ComboBox>
                        </VBox>
                        <VBox width="60%" class="sapUiTinyMargin">
                            <DatePicker value="{/SubmissionDate}" placeholder="Date of the Asset Review ..." class=""></DatePicker>
                        </VBox>
                    </HBox>

                    <!-- Suitability -->
                    <HBox>
                        <VBox width="80%" class="sapUiTinyMargin">
                            <Input value="{/SuitabilityComment}" placeholder="Suitability ..." class=""/>
                        </VBox>
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Rating">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-0-key" text="0"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-1-key" text="1"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-2-key" text="2"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-3-key" text="3"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-4-key" text="4"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-5-key" text="5"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-6-key" text="6"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-7-key" text="7"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-8-key" text="8"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-9-key" text="9"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemSuit-10-key" text="10"/>
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>

                    <!-- Value -->
                    <HBox>
                        <VBox width="80%" class="sapUiTinyMargin">
                            <Input value="{/ValueComment}" placeholder="Value ..." class=""/>
                        </VBox>
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Rating">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-0-key" text="0"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-1-key" text="1"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-2-key" text="2"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-3-key" text="3"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-4-key" text="4"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-5-key" text="5"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-6-key" text="6"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-7-key" text="7"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-8-key" text="8"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-9-key" text="9"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemVal-10-key" text="10"/>
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>

                    <!-- Durability -->
                    <HBox>
                        <VBox width="80%" class="sapUiTinyMargin">
                            <Input value="{/DurabilityComment}" placeholder="Durability ..." class=""/>
                        </VBox>
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Rating">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-0-key" text="0"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-1-key" text="1"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-2-key" text="2"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-3-key" text="3"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-4-key" text="4"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-5-key" text="5"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-6-key" text="6"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-7-key" text="7"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-8-key" text="8"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-9-key" text="9"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemDur-10-key" text="10"/>
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>

                    <!-- Longevity -->
                    <HBox>
                        <VBox width="80%" class="sapUiTinyMargin">
                            <Input value="{/LongevityComment}" placeholder="Longevity ..." class=""/>
                        </VBox>
                        <VBox width="20%" class="sapUiTinyMargin">
                            <ComboBox xmlns="sap.m" value="Rating">
                                <items>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-0-key" text="0"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-1-key" text="1"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-2-key" text="2"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-3-key" text="3"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-4-key" text="4"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-5-key" text="5"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-6-key" text="6"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-7-key" text="7"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-8-key" text="8"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-9-key" text="9"/>
                                    <core:Item xmlns:core="sap.ui.core" key="itemLong-10-key" text="10"/>
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>

                    <!-- Summary -->
                    <HBox>
                        <VBox width="100%" class="sapUiTinyMargin">
                            <Input  value="{/LongevityComment}" placeholder="Summarise the Asset ..." class=""/>
                        </VBox>
                    </HBox>

                    <!-- Save/Cancel Buttons -->
                    <HBox width="100%" justifyContent="End" class="sapUiTinyMargin">
                        <Button width="100px" press="saveBtn" type="Accept" text="Save" icon="sap-icon://basket" class="sapUiTinyMargin"></Button>
                        <Button width="100px" press="cancelBtn" type="Reject" text="Cancel" icon="sap-icon://cancel" class="sapUiTinyMargin"></Button>
                    </HBox>

                    <!-- Test for DATA bind in Fragment adding Dependent -->
                    <HBox>
                        <VBox width="100%" class="sapUiTinyMargin">
                            <Label text="Total Reviewed: {= ${AssetReviewModel>/Reviews}.length}" width="100%"/>             
                        </VBox>
                    </HBox>
                    
                </VBox>
            </f:content>
        </f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>